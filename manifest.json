{
  "manifest_version": 3,
  "name": "Nonsense Eradicator",
  "version": "1.0",
  "description": "Hides Facebook stories on the homepage.",
  "permissions": ["scripting", "activeTab"],
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/main.html",
    "default_icon": {
      "48": "./src/images/icon.png"
    }
  },
  "icons": {
    "48": "./src/images/icon.png"
  }
}
